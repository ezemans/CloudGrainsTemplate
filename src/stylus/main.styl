				&__list
					margin-top 1.06rem
					&__item
						list-style-type none
						font-weight 300
						font-size 1rem
						line-height 2.3rem
						&::before
							font-family 'Fontawesome'
							content "\f10b"
							margin-right 0.5rem
		&__portfolio /*---> Portfolio */
				background-color white
				&__items
					display flex
					flex-direction row
					flex-wrap wrap
					background-color white
					&__img
						width 50%
						box-sizing border-box
						margin-bottom -5px
						img
							width 100%
							height auto
							line-height 0
							border none
	.wide__status
		padding 3.25rem 0
		&__info
			width 90%
			padding 2.75rem 0
			&__list
				flex-direction column
				&__item
					width 100%
					&__icon
						margin 0 auto 0.21rem auto
						border-radius 50%
