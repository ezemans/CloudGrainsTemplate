						width 100%
						display flex
						justify-content flex-start
						flex-direction column
						padding-right 1rem
						&__item
							list-style-type none
							display block
							a 
								color white
								text-decoration none
								text-transform uppercase
								font-size 0.81rem
					&--on
						height 20rem
						border-bottom-right-radius 5px
						border-bottom-left-radius 5px
				&__mobile
					background-color dark100
					height 30px
					display inline
					border 0
					color white
					&:focus
						outline 0 !important
		&__hero
			width 100%
			&__article
				width 100%
				&__img
					display block
					margin-bottom 0rem
