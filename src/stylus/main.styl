						a
							color @color
							text-transform uppercase
							text-decoration none
							font-weight 600
					&__content
						line-height 1.6rem
						font-weight 300
						font-size 0.81rem
	.content
		&__subtitle
			color dark50
			font-weight 300
			text-align center
